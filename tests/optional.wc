wcnt-1.30/jwmsynth

samplerate 44100

timer
t-on
    timings
        time seconds 0.0
        time seconds 6.0
    timings
    time_is_relative off
t-on

lfo_clock
lfoc
    freq    7.0
    in_phase_trig off
lfoc

constant_freq f1
    freq 0.01
f1

wave w1 type sine in_phase_step f1 out_phase_step w1

wavfilein
crappytv
    filename    ../examples/samples/crappytvsamplev2.wav
    root_note   c0
crappytv

constant_note
n1
    name c#0
n1

sampler
s1
    wavfile             crappytv
    in_play_trig        lfoc out_phase_trig
    in_phase_step       n1 out_phase_step
//    start_pos           0
    in_start_pos_mod    w1 out_output
    start_pos_min       0
//    start_pos_max       100000
s1

wavfile_out
file
    filename    optional_output.wav
    data_format pcm16
    in_left     s1 out_left
    in_right    s1 out_right
    in_bar      t-on out_count
    start_bar   0
    end_bar     1
file

wcnt_exit
exit
    in_bar      t-on out_count
    exit_bar    1
exit

