//------------------------------------------------------------------------
// examples/sinewave.wc
//
//      creates 1 second WAV file containg a sinewave running
//      at the frequency of middle-C
//
//------------------------------------------------------------------------

samplerate 44100
bpm 120
signature 4/4

timer
t
    timings
        time seconds 0
        time seconds 10
    timings
t

constant_note n1 name d-2 n1
constant_note n2 name a2 n2

wave
s1
    in_phase_step   n1 out_phase_step
    type            sine
s1

wave
s2
    in_phase_step   n2 out_phase_step
    type            sine
s2

modifier
m1
    in_signal1 s1 out_output
    in_signal2 s2 out_output
    function add
    type m2
    bias 0.5
m1

wavfile_out
w
    in_left     m1 out_output
    in_right    m1 out_output
    in_bar      t out_count
    in_bar_trig t out_trig
    data_format float32
    filename    test.wav
    start_bar   0
    end_bar     1
w

wcnt_exit
x
    in_bar      t out_count
    exit_bar    1
x

